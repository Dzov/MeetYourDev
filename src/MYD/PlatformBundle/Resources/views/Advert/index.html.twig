{% block mydplatform_body %}
<main class="flex">
  
  {{ include("MYDPlatformBundle:Advert:sidebar.html.twig") }}

  <section class="centerContainer box flex2">
    {% block advert_body %}
    <div class="home__tabHeader">
      <button class="home__tab" onclick="openTab('ad')" >Annonces</button>
      <button class="home__tab" onclick="openTab('profiles')">Profils</button>
    </div>
    <div class="tab home__content" id="ad">
      <div class="home__card--container flex justifyBetween">
        {% for advert in listAdverts %}
        <article class="flexColumn home__card home__advert">
          <a href="{{ path('myd_platform_view', {'id': advert.id}) }}">
            {{ advert.title }}
          </a>
          <span>
            par {{ advert.author }},
            le {{ advert.date|date('d/m/Y') }}
          </span>
        </article>
        {% else %}
        <p>Pas (encore !) d'annonces</p>
        {% endfor %}
      </div>
    </div>
